<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>회원가입</title>
  </head>
  <body>
    <h1>회원가입</h1>
    <form action="/users/register" method="post">
      <div>
        <label>아이디:</label>
        <input type="text" name="username" required />
      </div>
      <div>
        <label>비밀번호:</label>
        <input type="password" name="password" required />
      </div>
      <button type="submit">회원가입</button>
    </form>
  </body>
</html>
